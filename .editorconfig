root = true

[*]
charset = utf-8
end_of_line = lf

insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{tsx, ts, mdx}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.scss]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space
